#!/bin/bash

# Path to the JSON file (generated from Task 0)
JSON_FILE="Advanced_shell/data.json"

# Check if file exists
if [ ! -f "$JSON_FILE" ]; then
  echo "‚ùå JSON file not found: $JSON_FILE"
  exit 1
fi

# Extract data using jq and format it
NAME=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter
HEIGHT=$(jq -r '.height' "$JSON_FILE" | awk '{printf "%.1f", $1/10}')  # Convert decimeters to meters
WEIGHT=$(jq -r '.weight' "$JSON_FILE" | awk '{printf "%.0f", $1/10}')  # Convert hectograms to kilograms
TYPE=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize type

# Final formatted output
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
