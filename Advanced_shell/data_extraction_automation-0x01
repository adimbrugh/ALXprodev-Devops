#!/bin/bash

# JSON file path
JSON_FILE="Advanced_shell/data.json"

# Ensure the file exists
if [ ! -f "$JSON_FILE" ]; then
  echo "‚ùå JSON file not found: $JSON_FILE"
  exit 1
fi

# Extract values
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')
weight=$(jq -r '.weight' "$JSON_FILE")
height=$(jq -r '.height' "$JSON_FILE")

# Format weight (hectograms to kg), height (decimeters to meters)
formatted_weight=$(echo "$weight" | awk '{printf "%.0f", $1/10}')
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')

# Final output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
