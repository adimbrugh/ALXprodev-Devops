#!/bin/bash

# Directory Setup
mkdir -p Advanced_shell
cd Advanced_shell || exit 1

# Define variables
URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API Request
curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$URL" > status_code.txt

# Extract HTTP status code
STATUS=$(<status_code.txt)
rm status_code.txt

# Check if the request was successful
if [ "$STATUS" -eq 200 ]; then
  echo "✅ Data successfully saved to $OUTPUT_FILE"
else
  echo "❌ Failed to fetch data. HTTP status: $STATUS" | tee -a "$ERROR_FILE"
  rm -f "$OUTPUT_FILE" # Remove incomplete output if exists
fi
